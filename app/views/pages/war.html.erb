<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <title>Commit Wars</title>
    <%= csrf_meta_tags %>
    <%= action_cable_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= favicon_link_tag 'favicon.ico' %>
  </head>
  <body>
    <%= render 'shared/navbar' %>
    <div id="war-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-sm-4 col-sm-offset-2">
            <div class="result-team-one text-center"></div>
            <%= render 'card', repo: @first_repo, owner: @team_one.username, repo_name: @team_one.repository, team: 'team-one' %>
          </div>
          <div class="col-sm-4">
            <div class="result-team-two text-center"></div>
            <%= render 'card', repo: @second_repo, owner: @team_two.username, repo_name: @team_two.repository, team: 'team-two' %>
          </div>
        </div>
      </div>
    </div>
    <%= render 'shared/footer' %>
    <%= javascript_include_tag 'application' %>
  </body>
</html>
